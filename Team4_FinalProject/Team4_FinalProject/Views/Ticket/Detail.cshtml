@model Ticket

@{
    ViewData["Title"] = " | Ticket Details";
}

<h1>Ticket Details</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>Title:</th>
            <th>@Model.Category</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <tr><td>Price:</td><td>@Model.Price.ToString("c")</td></tr>
        <tr><td>Genre:</td><td>@Model.Genre.Name</td></tr>
    <td>
        @foreach (BookAuthor ba in Model.BookAuthors)
        {
            <p>
                <a asp-action="Details" asp-controller="Author"
                   asp-route-id="@ba.AuthorId"
                   asp-route-slug="@ba.Author.FullName.Slug()">
                    @ba.Author.FullName
                </a>
            </p>
        }
    </td>
    </tr>
    <tr><td>Price:</td><td>@Model.Price.ToString("c")</td></tr>
    <tr><td>Genre:</td><td>@Model.Genre.Name</td></tr>
    </tbody>
</table>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>@Model.Note</th>
            <th>@Model.Category</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        <tr><td>Price:</td><td>@Model.Price.ToString("c")</td></tr>
        <tr><td>Genre:</td><td>@Model.Genre.Name</td></tr>
    <td>
        @foreach (BookAuthor ba in Model.BookAuthors)
        {
            <p>
                <a asp-action="Details" asp-controller="Author"
                   asp-route-id="@ba.AuthorId"
                   asp-route-slug="@ba.Author.FullName.Slug()">
                    @ba.Author.FullName
                </a>
            </p>
        }
    </td>
    </tr>
    <tr><td>Price:</td><td>@Model.Price.ToString("c")</td></tr>
    <tr><td>Genre:</td><td>@Model.Genre.Name</td></tr>
    </tbody>
</table>