@model Ticket
@{
    ViewData["Title"] = " | Ticket Details";
}

<h1>Ticket Details</h1>


<form >
    <div class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TicketId">Name</label>
        <input asp-for="TicketId" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Category">Issue Description</label>
        <input asp-for="Category" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <input asp-for="Status" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="UserId">Opened By</label>
        <input asp-for="UserId" class="form-control" readonly>
    </div>
</form>
